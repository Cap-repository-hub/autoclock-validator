[Unit]
Description=Solana Validator
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=solana
LimitNOFILE=1000000
LogRateLimitIntervalSec=0
Environment="PATH=/home/solana/.cargo/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/snap/bin:{{ path_to_project }}/.local/bin/:{{ path_to_project }}/.local/bin/:{{ path_to_project }}/.local/bin/"
ExecStart=/mnt/operational/solana/validator.sh

[Install]
WantedBy=multi-user.target
